<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tacademy.sampledesignsupport1.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show menu"
        android:id="@+id/btn_show_menu"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <android.support.design.widget.NavigationView
        android:layout_below="@+id/btn_show_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/navigation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:headerLayout="@layout/view_header"
        app:menu="@menu/navi_menu"
        android:visibility="gone"
        />

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/btn_show_menu"
        android:layout_toEndOf="@+id/btn_show_menu" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카드뷰"
        />
    </android.support.v7.widget.CardView>
</RelativeLayout>
